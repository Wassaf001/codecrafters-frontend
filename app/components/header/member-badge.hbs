<PrimaryLinkButton
  @size={{this.linkButtonSize}}
  @route="membership"
  class="{{if (eq this.linkButtonSize 'extra-small') 'mr-3'}}"
  data-test-member-badge
  ...attributes
>

  <span class="flex items-center">
    Member
    {{svg-jar "shield-check" class="w-4 ml-1 fill-current"}}
  </span>

  <EmberTooltip @text="You're a CodeCrafters member. Click here to view your membership details." />
</PrimaryLinkButton>